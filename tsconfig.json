{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "exclude": ["dist", "**/dist", "node_modules", "**/node_modules"],
  "include": ["src", "stories"]
}
